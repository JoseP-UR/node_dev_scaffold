{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "es6"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        "strict": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}